<RegisterScreen>:
    MDFloatLayout:
        md_bg_color: 0.05, 0.1, 0.2, 1

    ScrollView:
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(15)
            size_hint_y: None
            height: self.minimum_height

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(50)
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}

                MDTextField:
                    id: role_input
                    hint_text: "Select Role"
                    text: "patient"
                    readonly: True
                    size_hint_x: 0.9
                    on_focus: if self.focus: root.open_role_menu()

                MDIconButton:
                    icon: "menu-down"
                    on_release: root.open_role_menu()

            MDTextField:
                id: egn_input
                hint_text: "EGN"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: name_input
                hint_text: "Full Name"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: username_input
                hint_text: "Username"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password_input
                hint_text: "Password"
                password: True
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: confirm_password
                hint_text: "Confirm Password"
                password: True
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: phone_input
                hint_text: "Phone Number"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: dob_input
                hint_text: "Date of Birth (YYYY-MM-DD)"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: address_input
                hint_text: "Address"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: allergies_input
                hint_text: "Allergies"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: diagnosis_input
                hint_text: "Diagnosis"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: medications_input
                hint_text: "Medications"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Register"
                size_hint_x: 0.5
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                elevation: 0
                on_release: root.register()

            MDFlatButton:
                text: "Already have an account? Login here"
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "login"
