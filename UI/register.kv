<RegisterScreen>:
    MDFloatLayout:
        md_bg_color: 0.05, 0.1, 0.2, 1  # Lighter burgundy background
    ScrollView:
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(15)
            size_hint_y: None
            height: self.minimum_height

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(50)
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}

                MDTextField:
                    id: role_input
                    hint_text: "Select Role"
                    text: "patient"
                    readonly: True
                    mode: "rectangle"
                    size_hint_x: 0.9
                    text_color: 0, 0, 0, 1
                    on_focus: if self.focus: root.open_role_menu()

                MDIconButton:
                    icon: "menu-down"
                    on_release: root.open_role_menu()

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(50)
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: egn_input
                hint_text: "EGN"
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: name_input
                hint_text: "Full Name"
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: username_input
                hint_text: "Username"
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password_input
                hint_text: "Password"
                password: True
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: confirm_password
                hint_text: "Confirm Password"
                password: True
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: phone_input
                hint_text: "Phone Number"
                mode: "rectangle"
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                id: dob_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(60)
                MDTextField:
                    id: dob_input
                    hint_text: "Date of Birth (YYYY-MM-DD)"
                    mode: "rectangle"
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: dp(50)
                    pos_hint: {"center_x": 0.5}


            MDBoxLayout:
                id: address_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(60)
                MDTextField:
                    id: address_input
                    hint_text: "Address"
                    mode: "rectangle"
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: dp(50)
                    pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                id: allergies_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(60)
                MDTextField:
                    id: allergies_input
                    hint_text: "Allergies"
                    mode: "rectangle"
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: dp(50)
                    pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                id: diagnosis_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(60)
                MDTextField:
                    id: diagnosis_input
                    hint_text: "Diagnosis"
                    mode: "rectangle"
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: dp(50)
                    pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                id: medications_box
                orientation: "vertical"
                size_hint_y: None
                height: dp(60)

                MDTextField:
                    id: medications_input
                    hint_text: "Medications"
                    mode: "rectangle"
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: dp(50)
                    pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Register"
                size_hint_x: 0.5
                size_hint_y: None
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                elevation: 0
                on_release: root.register()

            MDTextButton:
                text: "Already have an account? Login here"
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "login"


