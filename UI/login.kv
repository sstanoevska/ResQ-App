<LoginScreen>:
    MDFloatLayout:
        md_bg_color: 0.501, 0, 0.125, 1#'#ab2957' # Burgundy color

        Label:
            text: "ResQ Login"
            halign: "center"
            bold: True
            font_size: "40sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: dp(130), dp(40)
            pos_hint: {"right": 0.98, "top": 0.98}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(40)
            padding: dp(10)

            MDLabel:
                text: ""
                size_hint_x: 0.9

            MDIconButton:
                icon: "comment-question-outline"
                theme_text_color: 'Custom'
                text_color: 'white'
                on_release: root.show_help_dialog()

        Label:
            id: status_label
            text: ""
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.78}
            size_hint_y: None
            height: "30dp"

        MDTextField:
            id: username_input
            #text: 'viktornov'
            #text: 'lidijadan'
            hint_text: "Username"
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            size_hint_x: 0.8
            line_color_focus: "white"
            hint_text_color_focus: "white"
            text_color_focus: "white"
            line_color_normal: "grey"
            hint_text_color_normal: "grey"
            text_color_normal: "grey"

        MDTextField:
            id: password_input
            #text: 'Viktor123***'
            #text: 'Lidija123***'

            hint_text: "Password"
            password: True
            pos_hint: {"center_x": 0.5, "center_y": 0.52}
            size_hint_x: 0.8
            line_color_focus: "white"
            hint_text_color_focus: "white"
            text_color_focus: "white"
            line_color_normal: "grey"
            hint_text_color_normal: "grey"
            text_color_normal: "grey"

        MDRaisedButton:
            text: "Login"
            md_bg_color: 0.27, 0.51, 0.71, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            on_release: root.login()

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: dp(200), dp(40)
            spacing: dp(10)
            pos_hint: {"x": 0.1, "center_y": 0.30}

            MDCheckbox:
                id: remember_checkbox
                size_hint: None, None
                size: dp(24), dp(24)
                color_active: 'white'
                color_inactive: 'white'

            MDLabel:
                text: "Remember Me"
                theme_text_color: "Custom"
                text_color: 'white'
                halign: "left"
                valign: "middle"
                size_hint_y: None
                height: dp(24)

        MDFlatButton:
            text: "Forgot Password?"
            pos_hint: {"center_x": 0.5, "center_y": 0.22}
            theme_text_color: 'Custom'
            text_color: 'white'
            on_release: app.root.current = "forgot_pw"

        MDFlatButton:
            text: "No account yet? Register here"
            pos_hint: {"center_x": 0.5}
            theme_text_color: 'Custom'
            text_color: 'white'
            on_release: app.root.current = "register"
