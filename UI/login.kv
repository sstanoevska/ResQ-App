<LoginScreen>:
    MDFloatLayout:
        theme_bg_color: "Custom"
        md_bg_color: 0.501, 0, 0.125, 1  # Burgundy color

        MDLabel:
            text: "ResQ Login"
            halign: "center"
            font_size: "24sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(40)
            padding: dp(10)
            pos_hint: {"right": 0.98, "top": 0.98}

            MDLabel:
                text: ""
                size_hint_x: 0.9

            MDIconButton:
                icon: "comment-question-outline"
                on_release: root.show_help_dialog()

        MDLabel:
            id: status_label
            text: ""
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.78}
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: username_input
            hint_text: "Username"
            mode: "filled"
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            size_hint_x: 0.8

        MDTextField:
            id: password_input
            hint_text: "Password"
            password: True
            mode: "filled"
            pos_hint: {"center_x": 0.5, "center_y": 0.52}
            size_hint_x: 0.8

        MDButton:
            style: "elevated"
            theme_bg_color: "Custom"
            md_bg_color: 0.2, 0.2, 0.2, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            size_hint: None, None
            size: "160dp", "42dp"
            on_release: root.login()

            MDButtonText:
                text: "Login"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: dp(200), dp(40)
            spacing: dp(10)
            pos_hint: {"x": 0.1, "center_y": 0.30}

            MDCheckbox:
                id: remember_checkbox
                size_hint: None, None
                size: dp(24), dp(24)

            MDLabel:
                text: "Remember Me"
                theme_text_color: "Secondary"
                halign: "left"
                valign: "middle"
                size_hint_y: None
                height: dp(24)

        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5, "center_y": 0.22}
            on_release: app.root.current = "forgot_pw"

            MDButtonText:
                text: "Forgot Password?"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            on_release: app.root.current = "register"

            MDButtonText:
                text: "No account yet? Register here"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
