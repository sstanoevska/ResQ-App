<DoctorDashboardScreen>:
    name: "doctor_dashboard"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        ScrollView:
            do_scroll_x: False

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "10dp"

                # HEADER: Greeting + Logo
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "10dp"
                    padding: "10dp"

                    MDLabel:
                        id: greeting_label
                        text: "Welcome back, Doctor!"
                        font_name: "assets/Quintessential-Regular.ttf"
                        font_size: "20sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        size_hint_x: 0.7
                        text_size: self.size
                        halign: "left"
                        valign: "top"
                        shorten: False
                        max_lines: 3

                    Image:
                        source: "assets/logo1.png"
                        size_hint_x: 0.3
                        size_hint_y: None
                        height: "100dp"
                        allow_stretch: True
                        keep_ratio: True

                MDRaisedButton:
                    text: "Log out"
                    pos_hint: {"right": 0.98}
                    elevation: 0
                    size_hint: None, None
                    size: "100dp", "40dp"
                    on_release: root.logout()

                # MAIN CONTENT
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.width

                    # LEFT - Doctor Info
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.35
                        padding: "10dp"
                        spacing: "10dp"
                        md_bg_color: 0.9, 0.3, 0.3, 1
                        radius: [20, 20, 20, 20]

                        ScrollView:
                            MDList:
                                id: doctor_info_box

                        MDFlatButton:
                            text: "Edit Profile"
                            pos_hint: {"center_x": 0.5}
                            size_hint: None, None
                            size: "140dp", "40dp"
                            on_release: root.open_edit_profile_screen()

                    # RIGHT - Patient List
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.6
                        padding: "10dp"
                        spacing: "10dp"

                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: "60dp"
                            spacing: "10dp"

                            MDLabel:
                                text: "My Patients"
                                font_size: "18sp"
                                halign: "left"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                size_hint_x: 0.9

                            MDIconButton:
                                icon: "plus"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                on_release: root.open_assign_patient_dialog()

                        ScrollView:
                            MDBoxLayout:
                                id: patients_list
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: "10dp"

                MDLabel:
                    text: "\"Bravery is your daily routine. Gratitude is ours. Thank you, Doctor!\""
                    font_name: "assets/Quintessential-Regular.ttf"
                    font_size: "16sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                    size_hint: None, None
                    size: 600, 30
                    pos_hint: {"center_x": 0.5}
