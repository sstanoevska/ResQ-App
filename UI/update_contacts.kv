<EditEmergencyContactScreen>:
    name: "update_emergency_contact"
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            title: "Edit Contact"
            elevation: 4
            left_action_items: [["arrow-left", root.go_back]]  # Back to previous screen
            md_bg_color: 0.27, 0.51, 0.71, 1  # Customize the background color
            title_color: 1, 1, 1, 1  # White color for title

        # ScrollView for input fields
        ScrollView:
            MDGridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: "10dp"

                MDTextField:
                    id: name_field
                    hint_text: "Enter contact's new name"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: phone_field
                    hint_text: "Enter phone number"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"
                    input_filter: "int"

                MDTextField:
                    id: email_field
                    hint_text: "Enter email"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: contact_type_field
                    hint_text: "Enter contact type (doctor or other)"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDButton:
                    text: "Save"
                    style: "elevated"
                    size_hint: None, None
                    size: "200dp", "50dp"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 0.27, 0.51, 0.71, 1
                    text_color: 0, 0, 0, 1
                    elevation: 0
                    on_release: root.update_contact()

                MDLabel:
                    id: message_label
                    text: ""
                    markup: True
                    theme_text_color: "Custom"
                    text_color: 0, 0.5, 0, 1
                    halign: "center"
                    valign: "middle"
                    size_hint_y: None
                    font_size: "16sp"
                    text_size: self.width, None
                    height: self.texture_size[1]



