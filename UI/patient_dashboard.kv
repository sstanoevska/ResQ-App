<PatientDashboardScreen>:
    MDBoxLayout:
        md_bg_color: 1, 1, 1, 1
        orientation: 'vertical'
        MDTopAppBar:
            id: greeting_label
            title: "Welcome back, Patient!"
            elevation: 4
            left_action_items: [["account", None]]
            right_action_items: [["logout", lambda x: root.logout()]]
            md_bg_color: 0.27, 0.51, 0.71, 1
        MDBoxLayout:
            ScrollView:
                do_scroll_x: False

                MDBoxLayout:
                    orientation: "vertical"
                    padding: "10dp"
                    spacing: "10dp"
                    adaptive_height: True
                    Image:
                        source: "assets/logo1.png"
                        size_hint: None, None
                        size: "120dp", "120dp"
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint:{'center_x': 0.5}


                    MDCard:
                        orientation: "vertical"
                        #size_hint_x: 0.35
                        padding: "10dp"
                        spacing: "10dp"
                        adaptive_height: True
                        md_bg_color: 0.9, 0.3, 0.3, 1
                        radius: [20, 20, 20, 20]

                        MDList:
                            id: patient_info_box

                        MDRaisedButton:
                            text: "Edit profile"
                            pos_hint: {"center_x": 0.5}
                            size_hint: None, None
                            size: "140dp", "40dp"
                            md_bg_color: 0.7, 0.2, 0.2, 1
                            elevation: 0
                            on_release: root.open_edit_profile_screen()

                    MDBoxLayout:
                        spacing: "20dp"
                        padding: "10dp"
                        adaptive_height: True

                        MDBoxLayout:
                            orientation: "vertical"
                            spacing: "60dp"
                            adaptive_height: True
                            #size_hint_y: None
                            #height: "120dp"
                            padding: "10dp"

                            MDRaisedButton:
                                text: ""
                                md_bg_color: 1, 0, 0, 1
                                on_release: root.send_alert("doctor")
                                size_hint: None, None
                                size: "80dp", "80dp"
                                elevation: 0
                                pos_hint: {'center_x': 0.5}
                            MDLabel:
                                text: "Doctor"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                pos_hint: {'center_x': 0.5}


                        MDBoxLayout:
                            spacing: "60dp"
                            adaptive_height: True
                            orientation: 'vertical'
                            padding: "10dp"

                            MDRaisedButton:
                                text: ""
                                md_bg_color: 0, 0, 1, 1
                                on_release: root.send_alert("others")
                                size_hint: None, None
                                size: "80dp", "80dp"
                                elevation: 0
                                pos_hint: {'center_x': 0.5}
                            MDLabel:
                                text: "Others"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                pos_hint: {'center_x': 0.5}

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "20dp"
                        spacing: "20dp"
                        adaptive_height: True

                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: "60dp"
                            spacing: "20dp"

                            MDLabel:
                                text: "Emergency Contacts"
                                font_size: "18sp"
                                halign: "left"
                                size_hint_x: 0.9
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1

                            MDIconButton:
                                icon: "plus"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                on_release: root.manager.current = "add_contact"

                        MDBoxLayout:
                            id: contacts_list
                            orientation: "vertical"
                            adaptive_height:True
                            spacing: "10dp"

                    MDSeparator:
                    Widget:
                    MDLabel:
                        text: "\"The bravest thing you can do is ask for help — and it only takes one tap ❤\""
                        font_name: "assets/Quintessential-Regular.ttf"
                        font_size: "16sp"
                        size_hint_y: None
                        size: 600, 30
                        pos_hint: {"right": 0.98, "y": 0.01}
                        halign: "center"
                        valign: "middle"
                        text_size: self.size
                        theme_text_color: "Custom"
                        text_color: 0.2, 0.2, 0.2, 1
                    Widget: