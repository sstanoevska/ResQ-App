<PatientDashboardScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        # Logo and Motto
        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            padding: "20dp"
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "top": 1}

            Image:
                source: "C:/Users/SARA/Desktop/Diplomska/logo1.png"
                size_hint: None, None
                size: "120dp", "120dp"
                allow_stretch: True
                keep_ratio: True
                pos_hint: {"center_x": 0.5}

        # Top left Greeting
        MDLabel:
            id: greeting_label
            text: "Welcome back, User!"
            font_style: "H5"
            halign: "left"
            valign: "top"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            pos_hint: {"x": 0.02, "top": 0.95}
            size_hint: None, None
            size: self.texture_size
            text_size: None, None

        MDRaisedButton:
            text: "Log out"
            pos_hint: {"right": 0.98, "top": 0.98}
            elevation: 0
            on_release: root.logout()

        # Main layout
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.8
            pos_hint: {"top": 0.80}
            padding: "10dp"

            # LEFT - Patient Info
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.30
                padding: "10dp"
                spacing: "10dp"
                md_bg_color: 0.9, 0.3, 0.3, 1
                radius: [20, 20, 20, 20]

                ScrollView:
                    MDList:
                        id: patient_info_box

                MDFlatButton:
                    text: "Edit profile"
                    pos_hint: {"center_x": 0.5}
                    size_hint: None, None
                    size: "140dp", "40dp"
                    md_bg_color: 0.7, 0.2, 0.2, 1
                    elevation: 0
                    on_release: root.open_edit_profile_screen()

            # CENTER - Buttons
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.3
                spacing: "20dp"
                padding: "10dp"
                pos_hint: {"center_y": 0.6}

                BoxLayout:
                    orientation: "horizontal"
                    spacing: "60dp"
                    size_hint_y: None
                    height: "120dp"
                    padding: "10dp"
                    pos_hint: {"center_x": 0.5}

                    MDFloatingActionButton:
                        icon: "account-heart"
                        md_bg_color: 1, 0, 0, 1  # RED
                        user_font_size: "40sp"
                        on_release: root.send_alert("doctor")
                        elevation:0
                        size: "80dp", "80dp"

                    MDFloatingActionButton:
                        icon: "account-group"
                        md_bg_color: 0, 0, 1, 1  # BLUE
                        user_font_size: "40sp"
                        on_release: root.send_alert("others")
                        elevation: 0
                        size: "80dp", "80dp"

                BoxLayout:
                    spacing: "60dp"
                    size_hint_y: None
                    height: "20dp"
                    padding: "0dp", "0dp", "0dp", "0dp"
                    pos_hint: {"center_x": 0.5}

                    MDLabel:
                        text: "Doctor"
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        elevation: 0
                    MDLabel:
                        text: "Others"
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        elevation: 0

            # RIGHT - Emergency Contacts
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                padding: "20dp"
                spacing: "20dp"

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: "60dp"
                    spacing: "20dp"

                    MDLabel:
                        text: "Emergency Contacts"
                        font_style: "H6"
                        halign: "left"
                        size_hint_x: 0.9
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1

                    MDIconButton:
                        icon: "plus"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        on_release: root.manager.current = "add_contact"

                ScrollView:
                    MDBoxLayout:
                        id: contacts_list
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        width: self.width
                        size_hint_x: 1
                        spacing: "10dp"
                        padding: "0dp"

        # Appreciation Quote - Bottom Right
        MDLabel:
            text: "\"The bravest thing you can do is ask for help — and it only takes one tap ❤\""
            font_name: "C:/Users/SARA/Desktop/Diplomska/Quintessential-Regular.ttf"
            font_size: "16sp"
            size_hint: None, None
            size: 600, 30
            pos_hint: {"right": 0.98, "y": 0.01}
            halign: "right"
            valign: "middle"
            text_size: self.size
            theme_text_color: "Custom"
            text_color: 0.2, 0.2, 0.2, 1



