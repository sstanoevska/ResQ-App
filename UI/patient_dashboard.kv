<PatientDashboardScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        ScrollView:
            do_scroll_x: False

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "10dp"

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: "130dp"
                    padding: "10dp"
                    spacing: "10dp"

                    MDLabel:
                        id: greeting_label
                        text: "Welcome back, User!"
                        font_size: "20sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        halign: "left"
                        valign: "middle"
                        text_size: self.width, None
                        size_hint_x: 0.7
                        size_hint_y: None
                        height: self.texture_size[1]

                    Image:
                        source: "assets/logo1.png"
                        size_hint: None, None
                        size: "120dp", "120dp"
                        allow_stretch: True
                        keep_ratio: True

                MDRaisedButton:
                    text: "Log out"
                    pos_hint: {"right": 0.98}
                    elevation: 0
                    size_hint: None, None
                    size: "100dp", "40dp"
                    on_release: root.logout()

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.width

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.35
                        padding: "10dp"
                        spacing: "10dp"
                        md_bg_color: 0.9, 0.3, 0.3, 1
                        radius: [20, 20, 20, 20]

                        ScrollView:
                            MDList:
                                id: patient_info_box

                        MDRaisedButton:
                            text: "Edit profile"
                            pos_hint: {"center_x": 0.5}
                            size_hint: None, None
                            size: "140dp", "40dp"
                            md_bg_color: 0.7, 0.2, 0.2, 1
                            elevation: 0
                            on_release: root.open_edit_profile_screen()

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.35
                        spacing: "20dp"
                        padding: "10dp"
                        pos_hint: {"center_y": 0.6}

                        BoxLayout:
                            orientation: "horizontal"
                            spacing: "60dp"
                            size_hint_y: None
                            height: "120dp"
                            padding: "10dp"

                            MDRaisedButton:
                                text: ""
                                md_bg_color: 1, 0, 0, 1
                                on_release: root.send_alert("doctor")
                                size_hint: None, None
                                size: "80dp", "80dp"
                                elevation: 0

                            MDRaisedButton:
                                text: ""
                                md_bg_color: 0, 0, 1, 1
                                on_release: root.send_alert("others")
                                size_hint: None, None
                                size: "80dp", "80dp"
                                elevation: 0

                        BoxLayout:
                            spacing: "60dp"
                            size_hint_y: None
                            height: "20dp"

                            MDLabel:
                                text: "Doctor"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                            MDLabel:
                                text: "Others"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.5
                        padding: "20dp"
                        spacing: "20dp"

                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: "60dp"
                            spacing: "20dp"

                            MDLabel:
                                text: "Emergency Contacts"
                                font_size: "18sp"
                                halign: "left"
                                size_hint_x: 0.9
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1

                            MDIconButton:
                                icon: "plus"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                on_release: root.manager.current = "add_contact"

                        ScrollView:
                            MDBoxLayout:
                                id: contacts_list
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: "10dp"

                MDLabel:
                    text: "\"The bravest thing you can do is ask for help — and it only takes one tap ❤\""
                    font_name: "assets/Quintessential-Regular.ttf"
                    font_size: "16sp"
                    size_hint: None, None
                    size: 600, 30
                    pos_hint: {"right": 0.98, "y": 0.01}
                    halign: "right"
                    valign: "middle"
                    text_size: self.size
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
