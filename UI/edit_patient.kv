<EditPatientInfoScreen>:
    name: "edit_patient_info"
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        spacing: 20

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            title: "Edit Patient Information"
            elevation: 4
            left_action_items: [["arrow-left", root.go_back]]
            md_bg_color: 0.27, 0.51, 0.71, 1
            title_color: 1, 1, 1, 1

        ScrollView:
            MDGridLayout:
                cols: 1
                spacing: 20
                padding: "10dp"
                size_hint_y: None
                height: self.minimum_height

                MDTextField:
                    id: name_field
                    hint_text: "Name"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: phone_field
                    hint_text: "Phone"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: address_field
                    hint_text: "Address"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: diagnosis_field
                    hint_text: "Diagnosis"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: medications_field
                    hint_text: "Medications"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: allergies_field
                    hint_text: "Allergies"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDButton:
                    style: "elevated"
                    on_release: root.save_changes()
                    size_hint: None, None
                    size: "150dp", "45dp"
                    pos_hint: {"center_x": 0.5}

                    MDButtonText:
                        text: "Save"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
