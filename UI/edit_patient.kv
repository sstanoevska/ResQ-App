<EditPatientInfoScreen>:
    name: "edit_patient_info"
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        spacing: 20

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            title: "Edit Patient Information"
            elevation: 4
            left_action_items: [["arrow-left", root.go_back]]
            md_bg_color: 0.27, 0.51, 0.71, 1
            title_color: 1, 1, 1, 1

        ScrollView:
            MDGridLayout:
                cols: 1
                spacing: 20
                padding: "10dp"
                size_hint_y: None
                height: self.minimum_height

                MDTextField:
                    id: name_field
                    hint_text: "Name"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: phone_field
                    hint_text: "Phone"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: address_field
                    hint_text: "Address"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: diagnosis_field
                    hint_text: "Diagnosis"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: medications_field
                    hint_text: "Medications"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    foreground_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: allergies_field
                    hint_text: "Allergies"
                    color_mode: 'custom'
                    text_color: 0, 0, 0, 1
                    foreground_color: 0, 0, 0, 1
                    fill_color: 1, 1, 1, 1
                    hint_text_color_normal: 0, 0, 0, 1
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_normal: 0.38, 0.49, 0.55, 1
                    line_color_focus: 0.28, 0.39, 0.45, 1
                    mode: "rectangle"
                    size_hint_y: None
                    height: "70dp"

                BoxLayout:
                    size_hint_y: None
                    height: "60dp"
                    spacing: "20dp"
                    padding: "10dp"
                    MDFlatButton:
                        text: "Save"
                        on_release: root.save_changes()

