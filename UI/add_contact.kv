<AddContactScreen>:
    name: "add_contact"
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            title: "Add Emergency Contact"
            elevation: 4
            left_action_items: [["arrow-left", root.go_back]]
            theme_bg_color: "Custom"
            md_bg_color: 0.27, 0.51, 0.71, 1
            title_color: 1, 1, 1, 1

        ScrollView:
            MDGridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: "10dp"

                MDTextField:
                    id: name_input
                    hint_text: "Full Name"
                    icon_right: "account"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: phone_input
                    hint_text: "Phone Number"
                    icon_right: "phone"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: contact_type_input
                    hint_text: "Contact Type (e.g., Doctor)"
                    icon_right: "stethoscope"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDTextField:
                    id: email_input
                    hint_text: "Email (optional)"
                    icon_right: "email"
                    mode: "filled"
                    size_hint_y: None
                    height: "70dp"

                MDButton:
                    style: "elevated"
                    size_hint: None, None
                    size: "220dp", "50dp"
                    pos_hint: {"center_x": 0.5}
                    theme_bg_color: "Custom"
                    md_bg_color: 0.27, 0.51, 0.71, 1
                    on_release: root.add_contact(self)
                    MDButtonText:
                        text: "Add Contact"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
