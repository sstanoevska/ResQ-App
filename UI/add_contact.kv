<AddContactScreen>:
    name: "add_contact"
    MDBoxLayout:
        orientation: 'vertical'
        #padding: [30, 30, 30, 30]
        spacing: 20
#        canvas.before:
#            Color:
#                rgba: 0.95, 0.95, 1, 1
#            Rectangle:
#                size: self.size
#                pos: self.pos

        MDTopAppBar:
            title: "Add Emergency Contact"
            elevation: 4
            left_action_items: [["arrow-left", root.go_back]]
            md_bg_color: 0.27, 0.51, 0.71, 1
        MDBoxLayout:
            orientation: 'vertical'
            padding: [30, 30, 30, 30]
            spacing: 20
            ScrollView:
                MDGridLayout:
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 20
                    padding: "10dp"

                    MDTextField:
                        id: name_input
                        hint_text: "  Full Name"
                        icon_right: "account"
                        mode: "rectangle"
                        size_hint_y: None
                        height: "70dp"

                    MDTextField:
                        id: phone_input
                        hint_text: "  Phone Number"
                        icon_right: "phone"
                        mode: "rectangle"
                        size_hint_y: None
                        height: "70dp"

                    MDTextField:
                        id: contact_type_input
                        hint_text: "  Contact Type (e.g., Doctor)"
                        icon_right: "stethoscope"
                        mode: "rectangle"
                        size_hint_y: None
                        height: "70dp"

                    MDTextField:
                        id: email_input
                        hint_text: "  Email (optional)"
                        icon_right: "email"
                        mode: "rectangle"
                        size_hint_y: None
                        height: "70dp"
                    Widget:
                    MDRaisedButton:
                        text: "Add Contact"
                        size_hint: 1, None
                        #size: "220dp", "50dp"
                        pos_hint: {"center_x": 0.5}
                        md_bg_color: 0.27, 0.51, 0.71, 1
                        on_release: root.add_contact(self)